    font-size: 1.2rem; /* Taille du texte du paragraphe */
    line-height: 1.6; /* Hauteur de ligne pour améliorer la lisibilité */
    border-radius: 10px;
    box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.3);
}

